{
  "name": "@prontopro/react-rating",
  "version": "0.1.0",
  "description": "React-based rating component empowered by styled-components",
  "main": "dist/react-rating.min.js",
  "files": [
    "README.md",
    "LICENSE.md",
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProntoPro/react-rating.git"
  },
  "moduleRoots": [
    "",
    "src"
  ],
  "keywords": [
    "rating",
    "react",
    "component",
    "react-component",
    "styled-components"
  ],
  "author": "ProntoPro",
  "contributors": [
    {
      "name": "David Sorrentino",
      "email": "me@davidsorrentino.com",
      "url": "https://github.com/dapids"
    },
    {
      "name": "Filippo Sarzana",
      "email": "filippo@sarzana.me",
      "url": "https://github.com/filipposarzana"
    },
    {
      "name": "Paolo Rovella",
      "email": "paolo.rovella@gmail.com",
      "url": "https://github.com/paolorovella"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProntoPro/react-rating/issues"
  },
  "homepage": "https://github.com/ProntoPro/react-rating",
  "bundlesize": [
    {
      "path": "./dist/react-rating.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/react-rating.min.js",
      "maxSize": "5 kB"
    }
  ],
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "src/utils/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/.config/jest.js"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-tap-event-plugin": "^3.0.0",
    "styled-components": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-inline-import-data-uri": "^1.0.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bundlesize": "^0.15.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "eslint-watch": "^3.1.3",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.3",
    "jest-enzyme": "^4.0.1",
    "open-browser-webpack-plugin": "^0.0.5",
    "uglify-js": "^3.1.1",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "prop-types": "^15.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-tap-event-plugin": "^3.0.2",
    "styled-components": "^2.0.0"
  },
  "scripts": {
    "build": "webpack --config .config/webpack.dist.config.js",
    "bundle:check": "bundlesize",
    "docs": "webpack --config .config/webpack.config.js",
    "eslint": "clear && eslint ./ && echo \"No errors found.\"",
    "eslint:watch": "esw -w --clear --cache",
    "postversion": "git push && git push --tags",
    "start": "webpack-dev-server --config .config/webpack.config.js --host 127.0.0.1 --content-base docs/",
    "test:ci": "yarn test --colors --lastCommit --silent",
    "test:watch": "yarn test --watch",
    "test": "jest test --coverage --env=jsdom",
    "version": "yarn build && yarn docs && git add -A dist"
  },
  "directories": {
    "doc": "docs"
  }
}
