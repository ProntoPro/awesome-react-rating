{
  "name": "awesome-react-rating",
  "version": "0.1.1",
  "description": "An awesome React Rating component",
  "main": "src/react-rating.js",
  "files": [
    "README.md",
    "LICENSE.md",
    "dist/",
    "src/"
  ],
  "optionalDependencies": {
    "fsevents": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProntoPro/awesome-react-rating.git"
  },
  "moduleRoots": [
    "",
    "src"
  ],
  "keywords": [
    "rating",
    "react",
    "component",
    "react-component"
  ],
  "author": "ProntoPro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProntoPro/awesome-react-rating/issues"
  },
  "homepage": "https://github.com/ProntoPro/awesome-react-rating",
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "src/utils/**/*.js",
      "!src/**/__stories__/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 73,
        "functions": 75,
        "lines": 72,
        "statements": 72
      }
    }
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.12",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "onchange": "^3.2.1",
    "react-addons-test-utils": "^15.6.2",
    "react-scripts": "^1.0.14",
    "react-test-renderer": "^16.0.0",
    "sync-files": "^1.0.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-tap-event-plugin": "^3.0.2",
    "styled-components": "^2.2.1"
  },
  "scripts": {
    "build": "react-scripts build",
    "dist:assets": "sync-files src/assets dist/assets",
    "dist:js": "cp build/static/js/main.*.js dist/main.js",
    "dist": "yarn dist:assets && yarn dist:js",
    "eslint:watch": "onchange './src' -iw -- yarn eslint 2> /dev/null",
    "eslint": "clear && eslint ./src && echo \"No errors found.\"",
    "start": "react-scripts start",
    "storybook": "NODE_PATH=src start-storybook -p 9009 -s public",
    "storybook:build": "mkdir -p dist && NODE_PATH=src build-storybook -c .storybook -o dist/storybook",
    "test:ci": "yarn test -- --colors --lastCommit --runInBand --silent",
    "test:watch": "yarn test -- --watch",
    "test": "react-scripts test --coverage --env=jsdom"
  }
}
